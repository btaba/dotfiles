# git
alias g='git'
alias gs='g s'
alias gb='g b'
alias ls='ls -GFh'
alias ld='ls -d */'

# conda
alias workon='source activate'

# MAC utilities
alias sleepscr='pmset displaysleepnow'

# Kubernetes
alias k='kubectl'

# Docker
# Stop all containers
alias sc='docker kill $(docker ps -q)'
# Kill all containers
alias kc='docker rm $(docker ps -a -q)'
# Remove all images
alias ri='docker rmi $(docker images -q)'

# Python
alias pyi='python setup.py install'
